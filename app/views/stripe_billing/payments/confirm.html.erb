<div class="max-w-7xl mx-auto pt-24 px-4 sm:px-6 lg:px-8">

  <nav aria-label="Progress" class="mb-12">
    <ol role="list" class="space-y-4 md:flex md:space-y-0 md:space-x-8">
      <li class="md:flex-1">
        <a href="#" class="pointer-events-none select-none group pl-4 py-2 flex flex-col border-l-4 border-indigo-600 md:pl-0 md:pt-4 md:pb-0 md:border-l-0 md:border-t-4">
          <span class="text-xs text-indigo-600 font-semibold tracking-wide uppercase">Step 1</span>
          <span class="text-sm font-medium">Select plan</span>
        </a>
      </li>

      <li class="md:flex-1">
        <a href="#" class="pointer-events-none select-none pl-4 py-2 flex flex-col border-l-4 border-indigo-600 md:pl-0 md:pt-4 md:pb-0 md:border-l-0 md:border-t-4" aria-current="step">
          <span class="text-xs text-indigo-600 font-semibold tracking-wide uppercase">Step 2</span>
          <span class="text-sm font-medium">Make payment</span>
        </a>
      </li>

      <li class="md:flex-1">
        <a href="#" class="pointer-events-none select-none pl-4 py-2 flex flex-col border-l-4 border-indigo-600 md:pl-0 md:pt-4 md:pb-0 md:border-l-0 md:border-t-4" aria-current="step">
          <span class="text-xs text-indigo-600 font-semibold tracking-wide uppercase">Step 3</span>
          <span class="text-sm font-medium">Confirmation</span>
        </a>
      </li>
    </ol>
  </nav>

  <div class="mt-8">
    <div class="mx-auto">

      <div class="max-w-xl">
        <h1 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">Thank you!</h1>
        <p class="mt-2 text-sm text-gray-500">Lorem ipsum.</p>
      </div>

      <div class="mt-8 space-y-20">
        <div>
          <h3 class="sr-only">Order placed on <%= time_tag(@provisioning_key.ordered_at, @provisioning_key.ordered_at.to_fs(:long)) %></h3>

          <div class="bg-gray-50 rounded-lg py-6 px-4 sm:px-6 sm:flex sm:items-center sm:justify-between sm:space-x-6 lg:space-x-8">
            <dl class="divide-y divide-gray-200 space-y-6 text-sm text-gray-600 flex-auto sm:divide-y-0 sm:space-y-0 sm:grid sm:grid-cols-3 sm:gap-x-6 lg:w-1/2 lg:flex-none lg:gap-x-8">
              <div class="flex justify-between sm:block">
                <dt class="font-medium text-gray-900">Date placed</dt>
                <dd class="sm:mt-1">
                  <%= time_tag(@provisioning_key.ordered_at, @provisioning_key.ordered_at.to_fs(:long)) %>
                </dd>
              </div>
              <div class="flex justify-between pt-6 sm:block sm:pt-0">
                <dt class="font-medium text-gray-900">Order number</dt>
                <dd class="sm:mt-1"><%= @provisioning_key.latest_invoice.number %></dd>
              </div>
              <div class="flex justify-between pt-6 font-medium text-gray-900 sm:block sm:pt-0">
                <dt>Total amount</dt>
                <dd class="sm:mt-1"><%= number_to_currency @provisioning_key.latest_invoice.total / 100 %></dd>
              </div>
            </dl>
            <a href="<%= @provisioning_key.latest_invoice.hosted_invoice_url %>" class="w-full flex items-center justify-center bg-white mt-6 py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:w-auto sm:mt-0">
              View Invoice
              <span class="sr-only">for order WU88191111</span>
            </a>
          </div>

          <table class="mt-4 w-full text-gray-500 sm:mt-6">
            <caption class="sr-only">
              Products
            </caption>
            <thead class="sr-only text-sm text-gray-500 text-left sm:not-sr-only">
              <tr>
                <th scope="col" class="sm:w-2/5 lg:w-1/3 pr-8 py-3 font-normal">Product</th>
                <th scope="col" class="hidden pr-8 py-3 font-normal sm:table-cell">Status</th>
              </tr>
            </thead>
            <tbody class="border-b border-gray-200 divide-y divide-gray-200 text-sm sm:border-t">

              <%- @provisioning_key.latest_invoice.lines.each do |line| %>
                <tr>
                  <td class="py-6 pr-8">
                    <div class="flex items-center">
                      <div class="font-medium text-gray-900"><%= line.description %></div>
                    </div>
                  </td>
                  <td>
                  Active
                  </td>
                </tr>
              <%- end %>

            </tbody>
          </table>
        </div>
      </div>

      <div class="mt-12 text-center">
        <%= link_to "Back to Billing Dashboard", stripe_billing.plan_payment_path, class: "text-gray-400" %>
      </div>


    </div>
  </div>

</div>
